<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.android.popcorn.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Container to hold movie backdrop and title-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_backdrop"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/colorPosterBackground"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <!--Container to hold movie poster and descriptive text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <!--Movie poster-->
            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="0dp"
                android:layout_height="285dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="centerCrop" />

            <!--Descriptive text-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="285dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="4dp"
                android:paddingTop="16dp">

                <!--Release year-->
                <TextView
                    android:id="@+id/tv_release_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorWhiteText"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="8dp"
                    android:textColor="@color/colorWhiteText" />


            </LinearLayout>


        </LinearLayout>

        <!--Container to told movie synopsis-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Movie synopsis-->
            <TextView
                android:id="@+id/tv_movie_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:textColor="@color/colorWhiteText" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
